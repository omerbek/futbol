<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>Rastgele Futbol Oyunu</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f3f3f3;
      padding: 30px;
      text-align: center;
    }
    button {
      padding: 15px 25px;
      font-size: 16px;
      cursor: pointer;
      border-radius: 8px;
      border: none;
      background-color: #4CAF50;
      color: white;
    }
    #log {
      margin-top: 30px;
      text-align: left;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .title {
      font-size: 24px;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="title">Rastgele Futbol Oyunu</div>
  <button onclick="playTurn()">Hamle Yap</button>
  <div id="log"></div>

  <script>
    const logDiv = document.getElementById("log");

    function playTurn() {
      const roll = Math.floor(Math.random() * 10);
      let result = Sayı: ${roll} → ;

      switch(roll) {
        case 0:
          result += "Top kaybı. Rakibe geçti.";
          break;
        case 1:
        case 2:
          result += "Pas verdi.";
          break;
        case 3:
          result += "Çalım attı!";
          break;
        case 4:
          result += "Çalım denedi ama topu kaybetti.";
          break;
        case 5:
          result += "Şut çekti! → " + shotResult();
          break;
        case 6:
          result += "Orta açtı → " + crossResult();
          break;
        case 7:
          result += "Faul kazandı. Serbest vuruş → " + freeKick();
          break;
        case 8:
          result += penalty();
          break;
        case 9:
          result += "Ofsayt! Rakibe geçti.";
          break;
      }

      logDiv.innerHTML = <p>${result}</p> + logDiv.innerHTML;
    }

    function shotResult() {
      const shot = Math.floor(Math.random() * 10);
      if (shot <= 4) return "Kaleci kurtardı.";
      if (shot <= 7) return "GOOOOL!";
      return "Direkten döndü.";
    }

    function crossResult() {
      const cross = Math.floor(Math.random() * 10);
      if (cross <= 3) return "Top auta çıktı.";
      if (cross <= 6) return "Kafayla şut → " + shotResult();
      return "Savunma uzaklaştırdı.";
    }

    function freeKick() {
      const fk = Math.floor(Math.random() * 10);
      if (fk <= 2) return "Baraja çarptı.";
      if (fk <= 5) return "Kaleci kurtardı.";
      if (fk <= 7) return "GOOOOL!";
      return "Aut.";
    }

    function penalty() {
      const penChance = Math.floor(Math.random() * 10);
      if (penChance <= 3) return "Penaltı verilmedi.";
      return "Penaltı verildi → " + shotResult();
    }
  </script>
</body>
</html>
